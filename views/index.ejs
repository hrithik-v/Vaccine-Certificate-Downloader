<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vaccine Certificate</title>
    <link rel="stylesheet" href="./styles.css">
</head>

<body>
    <form class="box" action="/" method="POST">
        <div id="logoContainer">
            <img id="logo" src="./imgs/logo.png" alt="">
        </div>
        <div id="input">
            <input type="text" onchange="validateNo()" placeholder="Mobile No." name="mobileNo" id="mobileNo">
        </div>
        <input type="button" id="btn" value="Send OTP">
    </form>
</body>

<script>
    function validateNo() {
        const mobileNo = document.getElementById('mobileNo').value
        console.log("abcd");
        if (mobileNo.length !== 10) {
            alert('Please Enter 10 digit No.')
        }
        else {
            document.getElementById('btn').type = 'submit'
        }
    }
    var redirect = '<%=redirect%>'
    console.log(redirect);
    if(redirect==='true'){
        alert("OTP Already Sent, Try after 3mins")
    }
</script>

</html>